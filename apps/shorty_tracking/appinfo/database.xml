<!--
  /**
  * @file appinfo/database.xml
  * @brief Database scheme definition for apps table
  * @author Christian Reiner
  */
 -->

<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*shorty_tracking</name>
		<declaration>
		<field>
			<name>id</name>
			<type>integer</type>
			<unsigned>true</unsigned>
			<length>4</length>
			<notnull>true</notnull>
			<default>0</default>
			<autoincrement>1</autoincrement>
		</field>
		<field>
			<name>shorty</name>
			<type>text</type>
			<length>12</length>
			<notnull>true</notnull>
		</field>
		<field>
			<name>time</name>
			<type>integer</type>
			<unsigned>true</unsigned>
			<length>8</length>
			<notnull>false</notnull>
			<default></default>
		</field>
		<field>
			<name>address</name>
			<type>text</type>
			<length>23</length>
			<notnull>true</notnull>
			<default></default>
		</field>
		<field>
			<name>host</name>
			<type>text</type>
			<length>80</length>
			<notnull>true</notnull>
			<default></default>
		</field>
		<field>
			<name>user</name>
			<type>text</type>
			<length>64</length>
			<notnull>true</notnull>
			<default></default>
		</field>
		<field>
			<name>result</name>
			<type>text</type>
			<length>10</length>
			<notnull>true</notnull>
			<default></default>
		</field>

		<index>
			<name>index_id</name>
			<unique>true</unique>
			<field>
				<name>id</name>
				<sorting>descending</sorting>
			</field>
		</index>
		<index>
			<name>index_shorty</name>
			<unique>false</unique>
			<field>
				<name>shorty</name>
				<sorting>descending</sorting>
			</field>
		</index>
		</declaration>
	</table>
</database>
